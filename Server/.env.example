# Server
PORT=4000
NODE_ENV=development
JSON_LIMIT=64kb

# Security & CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Auth (allow query-string tokens only in dev if you must)
ALLOW_QUERY_TOKENS=false

# Firebase Admin service account (pick ONE of the options)
# 1) Path to JSON file
# FIREBASE_SERVICE_ACCOUNT_PATH=C:\\secrets\\firebase-service-account.json
# 2) Base64 of the JSON file content (single long line)
# FIREBASE_SERVICE_ACCOUNT_B64=
# 3) Raw JSON (one line, EXACT JSON, not wrapped in quotes)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# Cleanup job (cron). Default: top of every hour
CLEANUP_CRON=0 * * * *

# Request TTL in hours (auto-close / eligible for cleanup)
REQUEST_TTL_HOURS=24

# Rate limit (requests per 15 minutes per IP)
RATE_LIMIT_MAX=300